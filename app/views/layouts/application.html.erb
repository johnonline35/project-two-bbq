<!DOCTYPE html>
<html>
  <head>
    <title>GrillProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="home-left-margin">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <%= link_to 'Home', root_path, :class => "nav-link active" %>
          <% if @current_user.present? %>
            <% if @current_user.admin? %>
              <%= link_to "All users", users_path %>
              <%= link_to "All Grills", grills_path %>
          <% end %>
          <%= link_to "New Grill", new_grill_path %>
          <%= link_to "Sign out #{ @current_user.email }", login_path, :method => 'delete' %>
            <% else %>
              <%= link_to 'Sign up', new_user_path %>
              <%= link_to 'Sign in', login_path %>
              <%= link_to 'Sign out', login_path, :method => 'delete' %>
          <% end %>
      </nav>
      </div>
    <div class="yield">
    <%= yield %>
    </div>
  </body>
</html>
